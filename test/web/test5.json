{
  "variables": {
    "sn": "従量課金",
    "ps": "/var/lib/jenkins/credentials.publishsettings",
    "sa": "azurestudystorage"
  },
  "builders": [
    {
      "type": "azure",
      "publish_settings_path": "{{user `ps`}}",
      "subscription_name": "{{user `sn`}}",
      "storage_account": "{{user `sa`}}",
      "storage_account_container": "images",
      "os_type": "Linux",
      "os_image_label": "OpenLogic 6.7",
      "location": "Japan East",
      "instance_size": "Small",
      "user_image_label": "test-web-packer",
      "ssh_pty": "true"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/var/lib/jenkins/settings/production/packer/test/web/setting",
      "destination": "/tmp/setting"
    },
    {
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "sudo yum install git expect -y",
        "sudo yum update -y",
        "sudo chmod +x /tmp/setting/web_setting.sh",
        "sudo /tmp/setting/web_setting.sh"
      ],
      "inline_shebang": "/bin/sh -x",
      "type": "shell"
    }
  ]
}
